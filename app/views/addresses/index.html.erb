<h1>Listing addresses</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address1</th>
    <th>Address2</th>
    <th>Address3</th>
    <th>Address4</th>
    <th>Postcode</th>
    <th>Dx</th>
    <th>Town</th>
    <th>Address type</th>
    <th>Court</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%= address.name %></td>
    <td><%= address.address1 %></td>
    <td><%= address.address2 %></td>
    <td><%= address.address3 %></td>
    <td><%= address.address4 %></td>
    <td><%= address.postcode %></td>
    <td><%= address.dx %></td>
    <td><%= address.town %></td>
    <td><%= address.address_type %></td>
    <td><%= address.court %></td>
    <td><%= link_to 'Show', address %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
    <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

