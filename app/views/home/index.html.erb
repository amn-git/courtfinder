</div>

<div id="advanced-search">
	<h2><a href="#">Need more options?</a></h2>
	<form method="post" id="advanced" class="more-options">
		<div class="form-item">
			<label for="parish">Parish </label>
			<input class="" id="parish" name="parish" type="text">
		</div>
		<div class="form-item">
			<label for="law">Area of law </label>
			<select class="" id="law" name="law">
				<option value=""></option>
			</select>
		</div>
		<div class="form-item">
			<label for="court-type">Court type </label>
			<select id="court-type" name="Court type">
				<option value=""></option>
			</select>
		</div>
		<br />
		<div class="form-item">
			<button type="submit" class="button">Find</button>
		</div>
	</form>
</div>
