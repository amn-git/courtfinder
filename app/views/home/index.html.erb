<% content_for :type, 'service' %>
<% content_for :title, 'Find a court' %>

<section class="intro">
	<div class="get-started-intro">
		<p>Use this tool to find a Court, Tribunal or other building</p>
	</div>
</section>

<div class="find-nearest">
	<form method="get" action="/search" id="local-locator-form" class="find-location-for-service">
		<fieldset>
			<legend class="visuallyhidden">Postcode lookup</legend>
			<div class="ask_location">
				<label for="search-main">Enter a UK postcode or Court name <br />
					<input class="postcode" id="search-main" name="q" type="text" placeholder="Name or Postcde" autocomplete="off" autofocus />
				</label>
				<button type="submit" class="button">Find</button>
				<div id="results"></div>
				<h2><a href="#" id="advanced-search">Need more options?</a></h2>
				<div id="filters">
					<%= select_tag "area_of_law", options_from_collection_for_select(@areas_of_law, "name", "name"), :prompt => 'Filter by area of Law' %>
				</div>
			</div>
		</fieldset>
	</form>
</div>

