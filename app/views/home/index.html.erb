<% content_for :type, 'service' %>
<% content_for :title, 'Find a court' %>

<section class="intro">
	<div class="get-started-intro">
		<p>Use this tool to find a court, tribunal or other building</p>
	</div>
</section>

<div class="find-nearest">
	<form method="get" action="/search" id="local-locator-form" class="find-location-for-service">
		<fieldset>
			<legend class="visuallyhidden">Postcode lookup</legend>
			<div class="ask_location">
				<label for="search-main">Enter a UK postcode or court name <br />
					<input class="postcode" id="search-main" name="q" type="text" placeholder="e.g. SW1H 9AJ or Luton" autocomplete="off" />
				</label>
				<button type="submit" class="button">Find</button>
				<div id="results"></div>
				
				<div id="filters">
					<label for="area_of_law">Filter by area of law (optional)<br />
						<%= select_tag "area_of_law", options_from_collection_for_select(@areas_of_law, "name", "name"), :prompt => 'all' %>
					</label>
				</div>
			</div>
		</fieldset>
	</form>
</div>

<h3><%= link_to 'Browse courts', courts_path %></h3>
<h3><%= link_to 'Browse areas of law', areas_of_law_path %></h3>
<h3><%= link_to 'Browse regions', regions_path %></h3>

<script id="js">
	var moj = moj||{}; moj.courts = <%=raw @courts.visible.to_json(:lookup => true) %>;
</script>