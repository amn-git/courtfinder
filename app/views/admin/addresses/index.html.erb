<h1>Listing addresses</h1>

<table>
  <tr>
    <th>Address1</th>
    <th>Postcode</th>
    <th>Dx</th>
    <th>Town</th>
    <th>Address type</th>
    <th>Court</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%= address.address_line_1 %></td>
    <td><%= address.postcode %></td>
    <td><%= address.dx %></td>
    <td><%= address.town %></td>
    <td><%= address.address_type %></td>
    <td><%= address.court %></td>
    <td><%= link_to 'Show', admin_address_path(address) %></td>
    <td><%= link_to 'Edit', edit_admin_address_path(address) %></td>
    <td><%= link_to 'Destroy', admin_address_path(address), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

