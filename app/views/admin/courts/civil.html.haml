= content_for :title, 'Manage all courts and tribunals'
%p
  Courts: #{Court.count}
%p
  Civil courts: #{@courts.count}

= render 'court_nav'

%div
  %div
    %h3 Civil courts
    - civil_areas_of_law do |area, id|
      - if (unassigned = LocalAuthority.unassigned_for_area_of_law(id)).count > 0
        .warning
          %strong Warning:
          = "#{unassigned.count} councils do not currently have a civil court that deals with #{area.downcase} attached "
          %a{ data: { expand: true } } view list
          .list
            %ul
              - unassigned.each do |local_authority|
                %li= local_authority.name

    - if invalid_local_authorities = flash[:invalid_local_authorities]
      - unless invalid_local_authorities.empty?
        .warning
          %strong Some councils were not added, as they could not be found:
          %ul
            - invalid_local_authorities.each do |name|
              %li= name

    %p.sub-list
      View:
      - civil_areas_of_law do |area, id|
        = link_to "#{area} (#{@courts.by_area_of_law(area).count})", civil_admin_courts_path(area_of_law_id: id), data: { disabled: (id == @area_of_law.id) }

    %table#js-local-authority-tbl
      %thead
        %tr
          %th
            Court no.
          %th
            Court name
          %th
            Councils
            .hint Use the auto complete boxes to add councils, start typing a council name to see options.
      %tbody
        - @courts.by_area_of_law(@area_of_law.name).each do |court|
          %tr{ class: cycle('even', 'odd') }
            %td
              = court.court_number
            %td
              = link_to(court.name, court)
            %td
              = render "court_local_authorities", court: court, area_of_law: @area_of_law, redirect_url: civil_admin_courts_path(@area_of_law.id)


.pagination-row.cf
  .page-entries
    = page_entries_info @courts.by_area_of_law(@area_of_law.name)
  = will_paginate @courts.by_area_of_law(@area_of_law.name)
