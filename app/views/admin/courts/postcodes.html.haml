= content_for :title, 'Manage All Courts'
%p
  Courts: #{@courts.count}
-#%p
  Areas of law: #{@postcode.count}

%div
  %div
    %ul
      %li
        %a{:href => areas_of_law_admin_courts_path} By areas of law
      %li
        %a{:href => court_types_admin_courts_path} By court type
      %li
        By post code
  %div
    %div
      %h2 By post code
      %table#js-pcode-tbl
        %thead
          %tr
            %th
              Court no.
            %th
              Court name
            %th
              Post codes
        %tbody
          - @courts.each do |court|
            %tr{:class => cycle('even', 'odd')}
              %td
                = court.court_number
              %td
                = link_to(court.name, court)
              %td
                = render "court_postcodes", :court => court

.pagination-row.cf
  .page-entries
    = page_entries_info @courts
  = will_paginate @courts
